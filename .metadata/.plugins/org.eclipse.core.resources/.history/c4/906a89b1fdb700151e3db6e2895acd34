package data;

public class Editor {
	
	private TileGrid grid;
	
	public Editor() {
		grid = new TileGrid();
	}
	
	public void update() {
		grid.draw();
	}
	
	public void setTile() {
		grid.setTile((int) Math.floorDiv(Mouse.getX() / 64), (int) Math.floor((HEIGHT - Mouse.getY() - 1 / 64), types[index]);
	}

}
